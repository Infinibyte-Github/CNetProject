    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:CNetProject"
    Shell.FlyoutBehavior="Disabled"
    Title="CNetProject">

    <TabBar>
        <ShellContent Title="Home" Icon="home.png" ContentTemplate="{DataTemplate local:MainPage}" />
        <ShellContent Title="Movies" Icon="movies.png" ContentTemplate="{DataTemplate local:MoviesPage}" />
        <ShellContent Title="Books" Icon="books.png" ContentTemplate="{DataTemplate local:BooksPage}" />
    </TabBar>

</Shell>
