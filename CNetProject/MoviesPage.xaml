<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CNetProject.MoviesPage">
    <StackLayout>
        <ListView ItemsSource="{Binding Movies}" SelectedItem="{Binding SelectedMovie, Mode=TwoWay}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding Title}">
                        <TextCell.Detail>
                            <Binding Path="." Converter="{StaticResource MovieDetailConverter}" />
                        </TextCell.Detail>
                    </TextCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        
        <Grid ColumnSpacing="10" HorizontalOptions="Fill" Margin="10">
            <!-- Define the columns in the Grid -->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>       
            
            <Button Grid.Column="0" Text="Add" Command="{Binding OpenAddMoviesFormCommand}"/>
            <Button Grid.Column="1" Text="Edit" Command="{Binding OpenEditMoviesFormCommand}"/>
            <Button Grid.Column="2" Text="Delete" Command="{Binding DeleteMovieCommand}"/>
        </Grid>
        
    </StackLayout>
</ContentPage>