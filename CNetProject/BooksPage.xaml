<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CNetProject.BooksPage">
    <StackLayout>
        <Label Text="Books Collection" 
               FontSize="Large" 
               HorizontalOptions="Center"/>
    
        <Button Text="Add Book" Command="{Binding OpenAddBooksFormCommand}"/>
        <ListView ItemsSource="{Binding Books}" SelectedItem="{Binding SelectedBook, Mode=TwoWay}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding Title}" Detail="{Binding Format}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        
        <Button Text="Edit Book" Command="{Binding OpenEditBooksFormCommand}" IsEnabled="{Binding IsBookSelected}"/>
        <Button Text="Delete Book" Command="{Binding DeleteBookCommand}" IsEnabled="{Binding IsBookSelected}"/>
        
    </StackLayout>
    
</ContentPage>